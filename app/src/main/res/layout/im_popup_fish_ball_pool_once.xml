<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="设置单次签到奖励鱼丸"
            android:textColor="#4b4b4b"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_yw_pool_once_close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/im_fish_ball_pool_close" />

        <RadioGroup
            android:id="@+id/rg_yw_pool_once_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:weightSum="4" />

        <TextView
            android:id="@+id/tv_yw_pool_once_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rg_yw_pool_once_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/im_shape_fish_ball_pool_bt"
            android:gravity="center"
            android:text="确认"
            android:textColor="#fefefe"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>