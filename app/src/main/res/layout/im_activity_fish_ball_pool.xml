<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="鱼丸池"
            android:textColor="#1b1b1b"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_yw_pool_back"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/im_back_press" />

        <TextView
            android:id="@+id/tv_yw_pool_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="历史记录"
            android:textColor="#999"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--不足提示-->
    <TextView
        android:id="@+id/tv_yw_pool_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fed25b"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="鱼丸池连续15天余额不足，将会暂停车队功能"
        android:textColor="#fff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/im_shape_fish_ball_pool_bg"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_yw_pool_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="#ff7700"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万鱼丸"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计可用"
                    android:textColor="#4b4b4b"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_yw_pool_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#ff7700"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_yw_pool_save"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/im_shape_fish_ball_pool_bt"
            android:text="存鱼丸"
            android:textColor="#fff"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/im_mc_call_xu" />

        <RelativeLayout
            android:id="@+id/rl_yw_pool_once"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="单次签到奖励"
                android:textColor="#4b4b4b"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_yw_pool_once_right"
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/im_yw_pool_right" />

            <TextView
                android:id="@+id/tv_yw_pool_once_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/iv_yw_pool_once_right"
                android:text="100鱼丸"
                android:textColor="#999"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yw_pool_renew"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="自动续存"
                android:textColor="#4b4b4b"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_yw_pool_renew_right"
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/im_yw_pool_right" />

            <TextView
                android:id="@+id/tv_yw_pool_renew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/iv_yw_pool_renew_right"
                android:text="不续存"
                android:textColor="#999"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="鱼丸池连续15天余额不足，将会暂停车队功能"
        android:textColor="#ff7700"
        android:textSize="14sp" />

</LinearLayout>