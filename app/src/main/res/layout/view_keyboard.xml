<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#3F51B5">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_event"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/rv_char"
        android:layout_alignRight="@id/rv_char"
        android:layout_below="@id/rv_char"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#5F73f5"
            android:focusable="true"
            android:gravity="center"
            android:text="清空"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#5F73f5"
            android:focusable="true"
            android:gravity="center"
            android:text="回退"
            android:textColor="#fff" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/rv_char"
        android:layout_alignRight="@id/rv_char"
        android:layout_below="@id/ll_event"
        android:layout_marginTop="10dp"
        android:background="#5F73f5"
        android:focusable="true"
        android:gravity="center"
        android:text="切换T9键盘"
        android:textColor="#fff" />
</RelativeLayout>